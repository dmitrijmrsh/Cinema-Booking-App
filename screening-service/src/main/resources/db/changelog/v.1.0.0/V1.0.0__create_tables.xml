<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="dmitrijmrsh">
        <createTable tableName="screening">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>

            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>

            <column name="time" type="time">
                <constraints nullable="false"/>
            </column>

            <column name="film_id" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="hall_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="dmitrijmrsh">
        <createTable tableName="seat">
            <column name="id" type="serial">
                <constraints primaryKey="true"/>
            </column>

            <column name="row_number" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="seat_in_row" type="int">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="screening_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


</databaseChangeLog>